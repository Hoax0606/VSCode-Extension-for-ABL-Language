{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [["{", "}"], ["[", "]"], ["(", ")"]],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "surroundingPairs": [
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" }
  ],

  "indentationRules": {
    "increaseIndentPattern": "^\\s*@((If\\b.*@Then\\b)|(Else\\s+If\\b.*@Then\\b)|(Else\\b)|(For\\b)|(Function\\b))\\b.*$",
    "decreaseIndentPattern": "^\\s*@((End\\s+(If|For|Function)\\b)|(Else\\s+If\\b.*@Then\\b)|(Else\\b))\\b.*$"
  },

  "onEnterRules": [
    {
      "beforeText": "^\\s*@If\\b.*@Then\\b.*$",
      "action": { "indentAction": "indent" }
    },
    {
      "beforeText": "^\\s*@Else\\s+If\\b.*@Then\\b.*$",
      "action": { "indentAction": "indentOutdent" }
    },
    {
      "beforeText": "^\\s*@Else\\b.*$",
      "action": { "indentAction": "indentOutdent" }
    },
    {
      "beforeText": "^\\s*@For\\b.*$",
      "action": { "indentAction": "indent" }
    },
    {
      "beforeText": "^\\s*@Function\\b.*$",
      "action": { "indentAction": "indent" }
    },
    {
      "beforeText": "^\\s*@End\\s+(If|For|Function)\\b.*$",
      "action": { "indentAction": "outdent" }
    }
  ]
}
