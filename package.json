{
  "name": "abl-language",
  "displayName": "abl-language",
  "description": "ABL language support for VS Code",
  "version": "0.0.5",
  "publisher": "hoax0606",
  "icon": "images/VSCode_ABL_Extension_Icon_rounded_square.png",
  "license": "MIT",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hoax0606/VSCode-Extension-for-ABL-Language.git"
  },
  "bugs": {
    "url": "https://github.com/Hoax0606/VSCode-Extension-for-ABL-Language/issues"
  },
  "homepage": "https://github.com/Hoax0606/VSCode-Extension-for-ABL-Language#readme",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:abl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "abl-language.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "abl",
        "aliases": ["ABL", "abl"],
        "extensions": [".abl", ".rule"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "abl",
        "scopeName": "source.abl",
        "path": "./syntaxes/abl.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "ABL Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/abl-dark-color-theme.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "ablMap",
        "description": "ABL Map context token",
        "superType": "function"
      },
      {
        "id": "ablFunc",
        "description": "ABL Function context token",
        "superType": "function"
      },
      {
        "id": "ablLogic",
        "description": "ABL logic operator token",
        "superType": "operator"
      },
      {
        "id": "ablData",
        "description": "ABL meta data token (^Data/^Class)",
        "superType": "variable"
      },
      {
        "id": "ablFunctionDecl",
        "description": "ABL user function declaration",
        "superType": "function"
      },
      {
        "id": "ablFunctionEnd",
        "description": "ABL user function end statement",
        "superType": "keyword"
      },
      {
        "id": "ablFunctionCall",
        "description": "ABL user function call",
        "superType": "function"
      }
    ],

    "semanticTokenScopes": [
      {
        "language": "abl",
        "scopes": {
          "ablMap": ["entity.name.function"],
          "ablFunc": ["entity.name.function"],
          "ablLogic": ["keyword.operator"],
          "ablData": ["variable.other"],
          "ablFunctionDecl": ["entity.name.function"],
          "ablFunctionEnd": ["keyword.control"],
          "ablFunctionCall": ["entity.name.function.call"]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}